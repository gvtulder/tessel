{
  "name": "tessel",
  "homepage": "https://tessel.vantulder.net/",
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Gijs van Tulder",
    "url": "https://www.vantulder.net/"
  },
  "scripts": {
    "build": "NODE_ENV=production parcel build src/index.html --no-source-maps",
    "build-cap-html": "NODE_ENV=production SKIP_SERVICE_WORKER=true parcel build src/index.capacitor.html --dist-dir dist-capacitor --no-source-maps && rm -r dist-capacitor/social/",
    "serve": "NODE_ENV=development parcel serve src/index.html --no-cache",
    "test": "jest",
    "check": "tsc --noEmit",
    "update-icon": "rsvg-convert assets/icons/icon.svg -w 180 -h 180 -o assets/icons/icon.png ; for s in 180 192 512 1024 ; do rsvg-convert assets/icons/icon.svg -w $s -h $s -o assets/icons/icon-$s.png ; done",
    "update-cap-assets": "npx @capacitor/assets generate --iconBackgroundColor '#eeeeee' --iconBackgroundColorDark '#222222' --splashBackgroundColor '#eeeeee' --splashBackgroundColorDark '#111111' --android --assetPath assets/capacitor/",
    "screenshots": "tsx scripts/make-screenshots.ts",
    "lingui-extract": "lingui extract",
    "lingui-compile": "lingui compile --typescript"
  },
  "browserslist": "defaults",
  "type": "module",
  "dependencies": {
    "@lingui/core": "^5.5.1",
    "@parcel/service-worker": "^2.15.4",
    "check2d": "^9.30.1",
    "polygon-clipping": "^0.15.7",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/ios": "^7.4.3",
    "@capacitor/preferences": "^7.0.2",
    "@capacitor/status-bar": "^7.0.3",
    "@jest/globals": "^30.2.0",
    "@lingui/babel-plugin-lingui-macro": "^5.5.1",
    "@lingui/cli": "^5.5.1",
    "@parcel/packager-raw-url": "^2.15.4",
    "@parcel/reporter-bundle-analyzer": "^2.15.4",
    "@parcel/transformer-inline-string": "^2.15.4",
    "@parcel/transformer-sass": "^2.15.4",
    "@parcel/transformer-webmanifest": "^2.15.4",
    "@swc/jest": "^0.2.39",
    "babel-plugin-transform-define": "^2.1.4",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "color": "^5.0.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-license-header": "^0.8.0",
    "eslint-plugin-lingui": "^0.11.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "parcel": "^2.15.4",
    "parcel-namer-rewrite": "^2.10.3-rc.5",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "svgo": "^4.0.0",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "parcel-namer-rewrite": {
    "hashing": "always",
    "disable": false,
    "rules": {
      "^([^s].*).js": "game.{hash}.js",
      "^(.*).css": "game.{hash}.css",
      "^index.capacitor.html": "index.html"
    }
  },
  "staticFiles": [
    {
      "staticPath": "assets/social/tessel-1200x1200.png",
      "staticOutPath": "social"
    },
    {
      "staticPath": "assets/social/tessel-1200x630.png",
      "staticOutPath": "social"
    },
    {
      "staticPath": "assets/icons/favicon.ico"
    },
    {
      "staticPath": "assets/icons/apple-touch-icon.png"
    }
  ]
}
